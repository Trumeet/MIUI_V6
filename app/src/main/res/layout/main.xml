<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#F6F6F6"
    >
    <LinearLayout
        android:layout_height="75dp"
        android:layout_width="match_parent"
        android:background="#ff0000"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:textSize="18.5sp"
            android:textColor="#ffffff"
            android:text="@string/app_name"
            />
    </LinearLayout>
    <ScrollView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="20dp"
        >
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="top|center"
        android:orientation="vertical">
    <Button
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_margin="5dp"
        android:id="@+id/one"
        android:text="dialog with one button"
        android:background="@drawable/button_shape_bg"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_margin="5dp"
        android:id="@+id/two"
        android:text="dialog with two button"
        android:background="@drawable/button_shape_bg"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_margin="5dp"
        android:id="@+id/three"
        android:text="dialog with three button"
        android:background="@drawable/button_shape_bg"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_margin="5dp"
        android:id="@+id/view_dialog"
        android:text="dialog with view"
        android:background="@drawable/button_shape_bg"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_margin="5dp"
        android:id="@+id/edit_dialog"
        android:text="dialog with edit text"
        android:background="@drawable/button_shape_bg"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_margin="5dp"
        android:id="@+id/click_item_dialog"
        android:text="dialog with click_item"
        android:background="@drawable/button_shape_bg"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_margin="5dp"
        android:id="@+id/single_choice_dialog"
        android:text="dialog with single choice"
        android:background="@drawable/button_shape_bg"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_margin="5dp"
        android:id="@+id/multi_choices_dialog"
        android:text="dialog with multi choice"
        android:background="@drawable/button_shape_bg"
        />
    </LinearLayout>
    </ScrollView>
</LinearLayout>
